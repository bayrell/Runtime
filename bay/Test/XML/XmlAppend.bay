namespace Runtime.Test.XML;

use Runtime.io;
use Runtime.XMLElement;
use Runtime.Unit.Test;
use Runtime.Test.XML.XmlTest;


class XmlAppend
{
	
	@Test{}
	static void testAppend1()
	{
		XMLElement xml = XMLElement::loadXml('<?xml version="1.0" encoding="UTF-8"?>
		<root>
			<item>1</item>
			<item>2</item>
			<item>3</item>
			<test>123</test>
		</root>');
		
		XMLElement xml_append = XMLElement::loadXml('<item>4</item>');
		
		xml.append(xml_append);
		
		XmlTest::assertEqualXml(
			'Append xml error',
			xml,
			'<?xml version="1.0" encoding="UTF-8"?>
			<root>
				<item>1</item>
				<item>2</item>
				<item>3</item>
				<test>123</test>
				<item>4</item>
			</root>'
		);
	}
	
	
	@Test{}
	static void testAppend2()
	{
		XMLElement xml = XMLElement::loadXml('<?xml version="1.0" encoding="UTF-8"?>
		<root>
			<item>1</item>
			<item>2</item>
			<item>3</item>
			<test>123</test>
		</root>');
		
		XMLElement xml_append = XMLElement::loadXml('<item>
			<subitem>1</subitem>
			<subitem>2</subitem>
		</item>');
		
		xml.append(xml_append);
		
		XmlTest::assertEqualXml(
			'Append xml error',
			xml,
			'<?xml version="1.0" encoding="UTF-8"?>
			<root>
				<item>1</item>
				<item>2</item>
				<item>3</item>
				<test>123</test>
				<item>
					<subitem>1</subitem>
					<subitem>2</subitem>
				</item>
			</root>'
		);
	}
	
}